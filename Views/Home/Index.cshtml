<!-- Estilos personalizados para las tarjetas -->
<style>
    .card-custom {
        border: none;
        border-radius: 0.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .card-custom:hover {
            transform: translateY(-10px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }

        .card-custom .card-body {
            background: linear-gradient(135deg, #ffffff, #f8f9fa);
            padding: 1.5rem;
            transition: background 0.3s ease;
        }

        .card-custom:hover .card-body {
            background: linear-gradient(135deg, #e9ecef, #ffffff);
        }

        .card-custom .card-title {
            font-weight: bold;
            color: #333;
        }

    .card-programador {
        border: none;
        border-radius: 1rem;
        max-width: 220px;
        margin: 0 auto;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-programador:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .card-programador .card-img-top {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            margin: 1rem auto 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .card-programador .card-body {
            padding: 1rem;
        }

        .card-programador .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .card-programador .card-text {
            font-size: 0.9rem;
            color: #555;
        }
</style>

