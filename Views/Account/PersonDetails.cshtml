@model ContaBle.Models.PersonDetailsViewModel

@{
    ViewData["Title"] = "Detalles de la Persona";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Detalles de la Persona</h3>
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Message"]
                        </div>
                    }
                    <div class="mb-3">
                        <p class="card-text"><strong>Nombre:</strong> @Model.FirstName</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Apellido:</strong> @Model.LastName</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Correo Electrónico:</strong> <a href="mailto:@Model.Email">@Model.Email</a></p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Número de Teléfono:</strong> @Model.PhoneNumber</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>DNI:</strong> @Model.Dni</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Fecha de Nacimiento:</strong> @Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Nota:</strong> @Model.Nota</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Número de Socio:</strong> @Model.NumeroSocio</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Cuota Socio:</strong> @Model.CuotaSocio.ToString("C")</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Cuota Fester:</strong> @Model.CuotaFester.ToString("C")</p>
                    </div>
                    <div class="mb-3">
                        <p class="card-text"><strong>Total Abonado:</strong> <mark>@Model.TotalAbonado</mark></p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="EditPerson" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="UserProfile" class="btn btn-secondary">Volver</a>
                        <a asp-action="SendDetailsEmail" asp-route-id="@Model.Id" class="btn btn-info">Enviar Detalles por Correo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
