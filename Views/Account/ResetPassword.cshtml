@model ContaBle.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Correo Electrónico -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Correo Electrónico</label>
                            <input asp-for="Email" class="form-control" placeholder="Ingresa tu correo electrónico" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Nueva Contraseña -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Nueva Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Ingresa tu nueva contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirmar Contraseña -->
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirma tu nueva contraseña" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Token Oculto -->
                        <input asp-for="Token" type="hidden" />

                        <!-- Botón para restablecer -->
                        <button type="submit" class="btn btn-primary w-100">Restablecer Contraseña</button>
                    </form>

                    <!-- Enlace para volver al login -->
                    <div class="mt-3 text-center">
                        <a asp-action="Login" class="text-decoration-none">Volver al inicio de sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
